        <ComboBox x:Name="cb" HorizontalAlignment="Left"  Margin="87,244,0,0" VerticalAlignment="Top" Width="120" materialDesign:HintAssist.Hint="kompi id"/>
        <ComboBox x:Name="cb1" HorizontalAlignment="Left" Margin="230,244,0,0" VerticalAlignment="Top" Width="120" materialDesign:HintAssist.Hint="zal id"/>
    </Grid>
